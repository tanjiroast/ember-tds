{{page-title "Sections"}}
<div class="ui green segment">
  <span class="ui label">{{@model.employee.email}}</span>
  <button class="ui black button" {{action "logout"}}>
    Logout
  </button>
</div>
<h2>Sections</h2>
<ul>
  {{#each @model.sections as |section|}}
    <li>
      {{section.name}}
    </li>
  {{/each}}
</ul>
<LinkTo @route="section.add">
  <button class="ui green button" > Ajouter une section </button>
</LinkTo>
<LinkTo @route="board">
  <button class="ui orange button"> Retour </button>
</LinkTo>
{{outlet}}